<Page
    x:Class="Drishya.Views.NormalSortingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Drishya.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:Drishya.Properties"
    xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    Title="NormalSortingView"
    AllowDrop="True"
    KeyDown="Page_KeyDown"
    mc:Ignorable="d">

    <Page.Resources>
        <Style BasedOn="{StaticResource MaterialDesignBody1TextBlock}" TargetType="TextBlock" />
        <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="TextBox" />
        <Style BasedOn="{StaticResource MaterialDesignFlatDarkBgButton}" TargetType="Button" />
        <Style BasedOn="{StaticResource MaterialDesignCardGroupBox}" TargetType="GroupBox">
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style BasedOn="{StaticResource MaterialDesignSlider}" TargetType="Slider">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2.5,0" />
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="VideoPlayerGrid"
            Grid.Column="0"
            Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="MetadataTitleTB"
                Grid.Row="0"
                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                Text="Search a folder to get started!"
                TextWrapping="WrapWithOverflow" />
            <vlc:VideoView x:Name="VideoPlayerVW" Grid.Row="1" />
            <Grid
                x:Name="ProcessingBlockerGrid"
                Grid.Row="1"
                Visibility="Collapsed">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                    Text="Video is processing"
                    TextWrapping="Wrap" />
                <Rectangle Fill="{StaticResource MaterialDesignDarkSeparatorBackground}" />
            </Grid>
            <Grid
                x:Name="DragDropGrid"
                Grid.Row="1"
                AllowDrop="True"
                Drop="Grid_Drop"
                Opacity="0">
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="Grid.DragEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="DragDropGrid"
                                    Storyboard.TargetProperty="Opacity"
                                    From="0"
                                    To="1"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Grid.DragLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="DragDropGrid"
                                    Storyboard.TargetProperty="Opacity"
                                    From="1"
                                    To="0"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>
                <Rectangle Fill="LightGray" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                    Text="Drop here" />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="PlayButton"
                    Grid.Column="0"
                    MinWidth="50"
                    Margin="0,0,1.5,0"
                    Click="PlayButton_Click"
                    ToolTip="Play">
                    <Image
                        Width="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Resources/play.png" />
                </Button>
                <TextBlock
                    x:Name="ElapsedTimeLabel"
                    Grid.Column="1"
                    Margin="0,0,1.5,0"
                    VerticalAlignment="Center"
                    Text="--:--"
                    ToolTip="Time Elapsed" />
                <Slider
                    x:Name="SeekVideoSlider"
                    Grid.Column="2"
                    Margin="0,0,1.5,0"
                    ValueChanged="SeekVideoSlider_ValueChanged" />
                <TextBlock
                    x:Name="TotalTimeLabel"
                    Grid.Column="3"
                    Margin="0,0,1.5,0"
                    VerticalAlignment="Center"
                    Text="--:--"
                    ToolTip="Total Time" />
                <Button
                    x:Name="SingleScreenshotButton"
                    Grid.Column="4"
                    MinWidth="50"
                    Margin="0,0,1.5,0"
                    Click="TakeScreenshot_Click"
                    ToolTip="Take Single Screenshot">
                    <Image
                        Width="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Resources/camera.png" />
                </Button>

                <Button
                    x:Name="StopButton"
                    Grid.Column="5"
                    MinWidth="50"
                    Margin="0,0,1.5,0"
                    Click="StopButton_Click"
                    ToolTip="Stop">
                    <Image
                        Width="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Resources/stop.png" />
                </Button>
                <Button
                    x:Name="SkipButton"
                    Grid.Column="6"
                    MinWidth="50"
                    Margin="0,0,1.5,0"
                    Click="SkipVideo_Click"
                    ToolTip="Next">
                    <Image
                        Width="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Resources/next.png" />
                </Button>

                <Slider
                    x:Name="VolumeSlider"
                    Grid.Column="7"
                    Margin="0,0,1.5,0"
                    Maximum="100"
                    Minimum="0"
                    TickFrequency="5"
                    ValueChanged="VolumeSlider_ValueChanged" />
                <Button
                    x:Name="MuteButton"
                    Grid.Column="8"
                    MinWidth="50"
                    Margin="0,0,1.5,0"
                    Click="MuteButton_Click"
                    ToolTip="Mute">
                    <Image
                        Width="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Resources/volume_off.png" />
                </Button>

            </Grid>
        </Grid>
        <ScrollViewer
            Grid.Column="1"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Column="1">
                <TextBlock
                    Margin="5"
                    FontFamily="Poppins"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="दृश्य || Drishya" />
                <StackPanel>
                    <GroupBox Header="Select Folder">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                    x:Name="FolderPathContainerTB"
                                    VerticalAlignment="Center"
                                    IsReadOnly="True"
                                    Text="Select a folder" />
                                <Button
                                    Grid.Column="1"
                                    Margin="2.5,0,0,0"
                                    Click="VideoFolderBrowse_Click"
                                    Style="{StaticResource MaterialDesignOutlinedButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="24"
                                            Margin="0,0,1.5,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="pack://application:,,,/Resources/folder_blue.png" />
                                        <TextBlock VerticalAlignment="Center" Text="Browse" />
                                    </StackPanel>
                                </Button>
                                <Rectangle
                                    Cursor="Hand"
                                    Fill="Transparent"
                                    MouseDown="VideoFolderMenuItem_Click" />
                            </Grid>
                            <CheckBox
                                x:Name="IncludeAlreadySortedCheckbox"
                                VerticalAlignment="Center"
                                Checked="IncludeAlreadySortedCheckbox_Checked"
                                Content="Include already sorted"
                                Unchecked="IncludeAlreadySortedCheckbox_Unchecked" />
                            <Button Margin="0,2.5" Click="SearchButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Width="24"
                                        Margin="0,0,1.5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="pack://application:,,,/Resources/search.png" />
                                    <TextBlock VerticalAlignment="Center" Text="Search" />
                                </StackPanel>
                            </Button>

                            <Grid MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=GroupBox}}" Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHelperTextBlock}"
                                    Text="Current video" />

                                <TextBlock
                                    x:Name="MetadataLocationLabel"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHelperTextBlock}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />

                                <Rectangle
                                    Grid.ColumnSpan="2"
                                    Cursor="Hand"
                                    Fill="Transparent"
                                    MouseDown="CurrentVideoLabel_MouseDown" />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Process video">
                        <StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource MaterialDesignHelperTextBlock}" Text="Rename video to" />
                                <TextBox x:Name="ControlNameTB" />
                            </StackPanel>
                            <StackPanel Margin="0,5">
                                <TextBlock Style="{StaticResource MaterialDesignHelperTextBlock}" Text="Change this text to" />
                                <UniformGrid Columns="2">
                                    <RadioButton
                                        x:Name="TextCaseNoneRB"
                                        Checked="TextCaseRB_Checked"
                                        Content="Keep as is"
                                        GroupName="TextCaseRB"
                                        Tag="None"
                                        ToolTip="Keep the text just as you have entered." />
                                    <RadioButton
                                        x:Name="TextCaseSentenceRB"
                                        Checked="TextCaseRB_Checked"
                                        Content="Sentence case"
                                        GroupName="TextCaseRB"
                                        Tag="Sentence"
                                        ToolTip="Only the first letter of entire sentence will be uppercase." />
                                    <RadioButton
                                        x:Name="TextCaseTitleRB"
                                        Checked="TextCaseRB_Checked"
                                        Content="Title Case"
                                        GroupName="TextCaseRB"
                                        Tag="Title"
                                        ToolTip="Every Starting Letter Of Each Word Is Uppercase." />
                                    <RadioButton
                                        x:Name="TextCaseUpperRB"
                                        Checked="TextCaseRB_Checked"
                                        Content="UPPERCASE"
                                        GroupName="TextCaseRB"
                                        Tag="Upper"
                                        ToolTip="CHANGE EVERYTHING TO UPPERCASE." />
                                    <RadioButton
                                        x:Name="TextCaseLowerRB"
                                        Checked="TextCaseRB_Checked"
                                        Content="lowercase"
                                        GroupName="TextCaseRB"
                                        Tag="Lower"
                                        ToolTip="change everything to lowercase." />
                                </UniformGrid>
                            </StackPanel>


                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <CheckBox
                                    x:Name="MoveSortedVideoCheckbox"
                                    Margin="0,0,5,5"
                                    VerticalAlignment="Center"
                                    Checked="MoveSortedVideoCheckbox_Checked"
                                    Content="And move to"
                                    Unchecked="MoveSortedVideoCheckbox_Unchecked" />
                                <Grid Grid.Column="1" Visibility="{Binding ElementName=MoveSortedVideoCheckbox, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox
                                        x:Name="DestinationPathContainerTB"
                                        VerticalAlignment="Center"
                                        IsReadOnly="True"
                                        Text="Select a folder" />
                                    <Button
                                        Grid.Column="1"
                                        Margin="2.5,0,0,0"
                                        Click="DestinationFolderBrowse_Click"
                                        Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="24"
                                                Margin="0,0,1.5,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/Resources/folder_blue.png" />
                                            <TextBlock VerticalAlignment="Center" Text="Browse" />
                                        </StackPanel>
                                    </Button>
                                    <Rectangle
                                        Cursor="Hand"
                                        Fill="Transparent"
                                        MouseDown="DestinationFolderMenuItem_Click" />
                                </Grid>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHelperTextBlock}"
                                    Text="Sorted video postfix"
                                    ToolTip="Text added at the end of processed video. It is used to flag video as processed" />
                                <TextBox
                                    x:Name="PostfixTB"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    TextChanged="PostfixTB_TextChanged" />
                            </Grid>

                            <StackPanel>
                                <TextBlock Style="{StaticResource MaterialDesignHelperTextBlock}" Text="And apply these effects" />
                                <UniformGrid>
                                    <CheckBox
                                        x:Name="ReverseVideoCB"
                                        Checked="ReverseVideoCB_Checked"
                                        Content="Reverse video"
                                        ToolTip="Video will be reversed."
                                        Unchecked="ReverseVideoCB_Unchecked" />
                                    <CheckBox
                                        x:Name="MuteVideoCB"
                                        Checked="MuteVideoCB_Checked"
                                        Content="Mute video"
                                        ToolTip="Video will be muted."
                                        Unchecked="MuteVideoCB_Unchecked" />
                                </UniformGrid>
                            </StackPanel>
                            <StackPanel>
                                <Button
                                    x:Name="ProcessButton"
                                    Margin="0,2.5"
                                    Click="ProcessVideo_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="24"
                                            Margin="0,0,1.5,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="pack://application:,,,/Resources/wrench.png" />
                                        <TextBlock VerticalAlignment="Center" Text="Update" />
                                    </StackPanel>
                                </Button>
                                <UniformGrid Margin="0,2.5" Columns="2">
                                    <Button
                                        x:Name="PreviousButton"
                                        Margin="0,0,1.5,0"
                                        Click="PreviousVideo_Click"
                                        Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="24"
                                                Margin="0,0,1.5,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/Resources/previous_blue.png" />
                                            <TextBlock VerticalAlignment="Center" Text="Previous" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        x:Name="NextButton"
                                        Margin="1.5,0,0,0"
                                        Click="SkipVideo_Click"
                                        Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" Text="Next" />
                                            <Image
                                                Width="24"
                                                Margin="0,0,1.5,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/Resources/next_blue.png" />

                                        </StackPanel>
                                    </Button>
                                </UniformGrid>
                                <Button
                                    x:Name="DeleteButton"
                                    Margin="0,2.5"
                                    Click="DeleteVideo_Click"
                                    Style="{StaticResource MaterialDesignOutlinedSecondaryButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="24"
                                            Margin="0,0,1.5,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="pack://application:,,,/Resources/delete_red.png" />
                                        <TextBlock VerticalAlignment="Center" Text="Delete" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Screenshotter">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHelperTextBlock}"
                                    Text="Take screenshot" />
                                <ComboBox
                                    x:Name="ScreenshotIntervalCB"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    SelectionChanged="ScreenshotIntervalCB_SelectionChanged">
                                    <ComboBoxItem Tag="0">Every frame</ComboBoxItem>
                                    <ComboBoxItem Tag="0.1">Every 10th of a second</ComboBoxItem>
                                    <ComboBoxItem Tag="0.5">Every half a second</ComboBoxItem>
                                    <ComboBoxItem Tag="1.0">Every second</ComboBoxItem>
                                    <ComboBoxItem Tag="2.0">Every 2 seconds</ComboBoxItem>
                                    <ComboBoxItem Tag="3.0">Every 3 seconds</ComboBoxItem>
                                    <ComboBoxItem Tag="5.0">Every 5 seconds</ComboBoxItem>
                                    <ComboBoxItem Tag="7.0">Every 7 seconds</ComboBoxItem>
                                    <ComboBoxItem Tag="10.0">Every 10 seconds</ComboBoxItem>
                                    <ComboBoxItem Tag="30.0">Every 30 seconds</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHelperTextBlock}"
                                    Text="And save in" />
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox
                                        x:Name="ScreenshotPathContainerTB"
                                        Margin="0"
                                        IsReadOnly="True"
                                        Text="Select a folder" />
                                    <Button
                                        Grid.Column="1"
                                        Margin="2.5,0,0,0"
                                        Click="ScreenshotFolderBrowse_Click"
                                        Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                Width="24"
                                                Margin="0,0,1.5,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/Resources/folder_blue.png" />
                                            <TextBlock VerticalAlignment="Center" Text="Browse" />
                                        </StackPanel>
                                    </Button>
                                    <Rectangle
                                        Cursor="Hand"
                                        Fill="Transparent"
                                        MouseDown="ScreenshotFolderMenuItem_Click" />
                                </Grid>
                            </Grid>
                            <CheckBox
                                x:Name="ShouldScreenshotSubfolderCheckbox"
                                VerticalAlignment="Center"
                                Checked="ShouldScreenshotSubfolderCheckbox_Checked"
                                Content="Create subfolder for each video"
                                Unchecked="ShouldScreenshotSubfolderCheckbox_Unchecked" />
                            <Button
                                x:Name="TakeMultipleScreenshotsButton"
                                Margin="0,2.5"
                                Click="TakeMultipleScreenshots_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Width="24"
                                        Margin="0,0,1.5,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="pack://application:,,,/Resources/camera.png" />
                                    <TextBlock VerticalAlignment="Center" Text="Take Screenshots" />
                                </StackPanel>
                            </Button>
                            <TextBlock
                                x:Name="ScreenshotStatusLabel"
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                Text="Ready" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <StatusBar Grid.Row="1" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock
                    x:Name="StatusLabel"
                    Style="{StaticResource MaterialDesignHelperTextBlock}"
                    Text="Ready"
                    Visibility="Collapsed" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock
                    x:Name="CountLabel"
                    Style="{StaticResource MaterialDesignHelperTextBlock}"
                    Text="--/--" />
            </StatusBarItem>

        </StatusBar>
    </Grid>
</Page>
